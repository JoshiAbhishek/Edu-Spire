<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EduSpire</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EduSpire", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("High School", "HighSchool", "Home")</li>
                    <li>@Html.ActionLink("College", "College", "Home")</li>
                    <li>@Html.ActionLink("Graduate School", "GraduateSchool", "Home")</li>
                    <li>@Html.ActionLink("Technical College", "TechnicalCollege", "Home")</li>
                    <li>@Html.ActionLink("Educators", "Educators", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="body-content">
        @RenderBody()

        @Html.Partial("_QuizPartial")

        <section id="takeQuizSection" class="jumbotron">
            <h2>Take Our Quiz!</h2>
            <h3>Answer some questions to see what education opportunities we recommend for you!</h3>
            <button id="takeQuizButton" onclick="openQuiz()" class="btn btn-lg btn-default">Take Our Quiz!</button>
        </section>

        <!--<hr />-->

        <div id="footer" class="jumbotron">
            <h4>&copy; @DateTime.Now.Year - EduSpire</h4>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function openQuiz() {
            $("#quizModal").modal('show');
        }
    </script>
</body>
</html>